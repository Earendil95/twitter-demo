<h1>Add Like</h1>

<% if @like.errors.any? %>
  <p> The request failed due to the following errors: 
    <ul>
      <% @like.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </p>
<% end %>


<%= form_with(model: [@tweet, @like], local: true) do |form| %>

  <%= select(:like, :user_id, @user_options) %>
  </br></br>
  <%= form.submit %>

<% end %>

<%= link_to 'Back', tweet_likes_path(@tweet) %>
