<h1>@<%= @user.handle %> Followers</h1>

<ul>
  <% @follow.each do |follow| %>
    <li>@<%= follow.follower.handle %>
    <%= button_to "Remove", user_follow_path(@user, follow), method: :delete, form: {style: 'display:inline-block;'} if @current_user == @user %>
    </li>
  <% end %>
</ul>

<%= link_to "Back", user_path(@user) %> 
