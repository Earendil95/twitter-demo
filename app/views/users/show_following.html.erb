<h1>@<%= @user.handle %> Following</h1>

<ul>
  <% @following.each do |following| %>
    <li>@<%= following.handle %>
    <%= button_to "Remove", user_follow_path(@user, following), method: :delete, form: {style: 'display:inline-block;'} %>
    </li>
  <% end %>
</ul>

<%= link_to "Back", user_path(@user) %> 
