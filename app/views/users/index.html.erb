<h1>Twitter Users</h1>

<div>
  <table>
    <thead>
      <th><b>Handle</b></th>
      <th colspan="3"><b>Actions</b></th>
    </thead>
    <tbody>
      <% User.all.each do |user| %>
        <tr>
          <td>@<%= user.handle %> </td>
          <td>
            <%= button_to "Follow", new_user_follow_path(user), method: :get, form: {style: 'display:inline-block;'} if @current_user && @current_user != user %> 
            <%= button_to "View Profile", user_path(user), method: :get, form: {style: 'display:inline-block;'} %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p><%= button_to "Sign Up", sign_up_path, method: :get  if !@current_user %> </p>

<p>
<%= link_to "Home", root_path %> |
<%= link_to "About", about_path %>
</p>
