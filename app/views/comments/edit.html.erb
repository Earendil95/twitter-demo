<h1>Edit Comment</h1>

<% if @comment.errors.any? %>
  <p> The request failed due to the following errors: 
    <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </p>
<% end %>


<%= form_with(model: [@tweet, @comment], local: true) do |form| %>

  <%= form.label :content, "Content:" %></br>
  <%= form.text_area :content, size: "40x10" %></br></br>

  <%= form.submit %>

<% end %>

<%= link_to 'Back', tweets_path(@tweet) %>
